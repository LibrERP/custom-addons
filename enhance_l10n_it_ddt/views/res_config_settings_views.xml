<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_sale_ddt_extend" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.ddt_extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_order_dates']" position="after">
                <div class="o_form_label">Setting Shipping Defaults</div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="sale_ddt_carriage_condition_id"/>
                   			<field name="sale_ddt_carriage_condition_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="sale_ddt_goods_description_id"/>
                   			<field name="sale_ddt_goods_description_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="sale_ddt_transportation_reason_id"/>
                     		<field name="sale_ddt_transportation_reason_id" />
                        </div>
                	</div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="sale_ddt_transportation_method_id"/>
                     		<field name="sale_ddt_transportation_method_id" />
                        </div>
                	</div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="partner_ddt_type_method_id"/>
                     		<field name="partner_ddt_type_method_id" />
                        </div>
                	</div>
            	</div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_stock_ddt_extend" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.ddt_extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@id='schedule_info']" position="before">
                <h2 id="ddt_info">Transport Document Defaults</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="setup_private_ddt_type_id"/>
                   			<field name="setup_private_ddt_type_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="setup_business_ddt_type_id"/>
                   			<field name="setup_business_ddt_type_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="setup_private_eu_ddt_type_id"/>
                         <div>
                         </div>
                   			<field name="setup_private_eu_ddt_type_id" />
                        </div>
                    </div>
                   <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="setup_business_eu_ddt_type_id"/>
                     		<field name="setup_business_eu_ddt_type_id" />
                        </div>
                	</div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                    		<label for="setup_private_extra_eu_ddt_type_id"/>
                     		<field name="setup_private_extra_eu_ddt_type_id" />
                        </div>
                	</div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                   			<label for="setup_business_extra_eu_ddt_type_id"/>
                     		<field name="setup_business_extra_eu_ddt_type_id" />
                        </div>
                	</div>
            	</div>
            </xpath>
        </field>
    </record>
    
</odoo>

        <field name="model">aged.partner.balance.wizard</field>
        <field name="inherit_id" ref="account_financial_report.aged_partner_balance_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group[@name='filters']/group[@name='other_filters']" position="inside">
                <label string=" " for="hide_account_at_0"/>

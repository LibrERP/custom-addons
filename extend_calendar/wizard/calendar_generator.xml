<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_calendar_date_interval_generator_view_form" model="ir.ui.view">
        <field name="name">res.calendar.date.interval.generator.form</field>
        <field name="model">res.calendar.date.interval.generator</field>
        <field name="arch" type="xml">
            <form string="Generate Date Intervals">
                <group col="4">
                    <field name="name_prefix"/>
                    <field name="type_id"/>
                    <label for="duration_count"/>
                    <div>
                        <field class="oe_inline" name="duration_count"/>
                        <field class="oe_inline" name="unit_of_time"/>
                    </div>
                    <field name="date_start"/>
                    <field name="count"/>
                    <field groups="base.group_multi_company"
                        name="company_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button class="btn btn-sm btn-primary"
                        name="action_apply" string="Submit" type="object"/>
                    <button class="btn btn-sm btn-default"
                        special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="res_calendar_date_interval_generator_action" model="ir.actions.act_window">
        <field name="name">Generate Date Intervals</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.calendar.date.interval.generator</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_calendar_date_interval_generator_view_form"/>
        <field name="target">new</field>
    </record>
    <menuitem action="res_calendar_date_interval_generator_action"
        id="menu_res_calendar_date_interval_generator_action" parent="menu_res_calendar_date_interval"/>
</odoo>

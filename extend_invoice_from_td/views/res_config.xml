<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_config_settings_processes" model="ir.ui.view">
        <field name="name">l10n_it_payment_order_riba.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
                <h2>Numero di processi</h2>
                <div class="row mt16 o_settings_container" id="number_of_processes">
                    <div class="col-xs-18 col-md-12 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <label for="number_of_processes" class="col-md-4 o_light_label"/>
                                <field name="number_of_processes"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


</odoo>


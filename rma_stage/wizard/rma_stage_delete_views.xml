<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rma_stage_delete_wizard" model="ir.ui.view">
        <field name="name">rma.stage.delete.wizard.form</field>
        <field name="model">rma.stage.delete.wizard</field>
        <field name="arch" type="xml">
            <form string="Delete Stage">
                <field name="rma_count" invisible="1" />
                <field name="stages_active" invisible="1" />
                <div attrs="{'invisible': [('rma_count', '>', 0)]}">
                    <p>Are you sure you want to delete those stages ?</p>
                </div>
                <div attrs="{'invisible': ['|', ('stages_active', '=', False), ('rma_count', '=', 0)]}">
                    <p>You cannot delete stages containing tasks. You can either archive them or first delete all of their tasks.</p>
                </div>
                <div attrs="{'invisible': ['|', ('stages_active', '=', True), ('rma_count', '=', 0)]}">
                    <p>You cannot delete stages containing tasks. You should first delete all of their tasks.</p>
                </div>
                <footer>
                    <button string="Archive Stages" type="object" name="action_archive" class="btn btn-primary" attrs="{'invisible': ['|', ('stages_active', '=', False), ('rma_count', '=', 0)]}" />
                    <button string="Delete" type="object" name="action_unlink" class="btn btn-primary" attrs="{'invisible': [('rma_count', '>', 0)]}" />
                    <button string="Discard" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="view_rma_stage_delete_confirmation_wizard" model="ir.ui.view">
        <field name="name">rma.stage.delete.wizard.form</field>
        <field name="model">rma.stage.delete.wizard</field>
        <field name="arch" type="xml">
            <form string="Delete Stage">
                <div>
                    <p>This will archive the stages and all the rma they contain:</p>
                    <p>Are you sure you want to continue?</p>
                </div>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn btn-primary"/>
                    <button string="Discard" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>

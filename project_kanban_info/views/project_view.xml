<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_project_info_kanban" model="ir.ui.view">
        <field name="name">project.project.info.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban" />
        <field name="arch" type="xml">
            <field name="task_count" position="after">
                <field name="tasks_opened" />
            </field>
            <xpath expr="//div/span[@class='o_value']" position="before">
                <span class="o_opened"><t t-esc="record.tasks_opened.value"/> / </span>
            </xpath>
        </field>
    </record>

    <record id="helpdesk_info_kanban" model="ir.ui.view">
        <field name="name">helpdesk.project.project.info.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="helpdesk_mgmt_project.view_project_kanban" />
        <field name="arch" type="xml">
            <field name="ticket_count" position="after">
                <field name="tickets_opened" />
            </field>
            <xpath expr="//a[@name='1016']/span[@class='o_value']" position="before">
                <span class="t_opened"><t t-esc="record.tickets_opened.value"/> / </span>
            </xpath>
        </field>
    </record>

</odoo>

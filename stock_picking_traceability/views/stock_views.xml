<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_tracking_form_view" model="ir.ui.view">
        <field name="name">stock.picking.tracking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_uom']" position="after">
                <field name="tracking" attrs="{'readonly': [('state', '==', 'done')]}"/>
            </xpath>
            <xpath expr="//form/group/field[@name='product_uom']" position="after">
                <field name="tracking" attrs="{'readonly': [('state', '==', 'done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>

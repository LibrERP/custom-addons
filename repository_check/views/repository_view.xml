<!--                        <field name="last_check" />-->
<!--                    </group>-->

<!--                    <group col="6" colspan="4">-->
<!--                        <field name="username"/>-->
<!--                        <field name="repository_type" />-->
<!--                        <field name="last_check" />-->
<!--                    </group>-->
<!--                    <group>-->
<!--                        <field name="password" password="True"/>-->
<!--                    </group>-->
<!--                    <newline/>-->
                    <group colspan="2">
                         <button name="action_pull" attrs="{'invisible': [('state','!=','repo')]}" string="Pull" type="object"/>
                    </group>
                    <group colspan="2">
                         <button name="action_clone" attrs="{'invisible': [('state','!=','clone')]}" string="Clone" type="object"/>
                    </group>
                    <group col="2" colspan="2">
                        <field name="last_check_state"/>
                    </group>
                    <group>
                        <field name="log" colspan="4"/>
                    </group>
                </form>
            </field>
        </record>





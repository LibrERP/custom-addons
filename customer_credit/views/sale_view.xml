<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_credit_limit" model="ir.ui.view">
        <field name="name">sale.order.form.credit.limit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after" >
                <field name="type" invisible="1" />
                <field name="sale_warn" invisible="1" />
                <separator />
                <field name="order_credit_limit" attrs="{'invisible': [('type', '!=', 'shopping')]}" />
                <field name="order_advance_remaining" attrs="{'invisible': [('type', '!=', 'shopping')]}" />
                <field name="credit_warn" attrs="{'invisible': ['|', ('type', '!=', 'shopping'), ('sale_warn', '=', False)]}" />
            </xpath>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pec.mailing</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mass_mailing.res_config_settings_view_form"/>
        <field name="priority">80</field>
        <field name="arch" type="xml">
            <div name="mass_mailing_reports_setting_container" position="after">
                <div class="col-lg-6 o_setting_box col-12" name="pec_server_setting_container">
                    <div class="o_setting_left_pane" title="Use a specific PEC server.">
                        <field name="mass_mailing_outgoing_pec_server"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="mass_mailing_outgoing_pec_server"/>
                        <div class="text-muted">
                            Pick a dedicated outgoing PEC server for your mass mailings
                        </div>
                        <div class="content-group" attrs="{'invisible': [('mass_mailing_outgoing_pec_server', '=', False)]}">
                            <div class="mt16">
                                <field name="mass_mailing_pec_server_id" options="{'no_create': True, 'no_open': True}"
                                       placeholder="Default Server"/>
                            </div>
                            <div class="mt8">
                                <button type="action" name="base.action_ir_mail_server_list" string="Configure Outgoing Mail Servers" icon="fa-arrow-right" class="oe_link"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
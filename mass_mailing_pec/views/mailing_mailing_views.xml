<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mailing_maling_pec_form_view" model="ir.ui.view">
        <field name="name">mailing.mailing.pec.view.form.mail</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='subject']" position="before">
                <field name="is_pec" string="Sent as PEC" attrs="{'invisible': [('mailing_type', '!=', 'mail')], 'readonly': [('state', 'in', ('sending', 'done'))]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_mail_mass_mailing_pec_tree" model="ir.ui.view">
        <field name="name">mailing.mailing.tree.pec</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sent']" position="after">
                <field name="is_pec" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>